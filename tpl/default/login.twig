{% extends 'index.twig' %}

{% block content %}

<div class="row" style="margin-top: 20%">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-4 mx-auto">
        <form class="form-inline" method="post">
            <div class="form-group mr-sm-3">
                <label for="pw" class="sr-only">{{ t.Password }}</label>
                <input id="pw" name="pw" type="password" class="form-control"
                       placeholder="{{ t.Password }}"  required>
            </div>
            <button type="submit" class="btn btn-outline-primary">{{ t.Login }}</button>
        </form>

    </div>
</div>

{% endblock %}
