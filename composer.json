{
    "require": {
        "kanellov/slim-twig-flash": "^0.2.0",
        "kaoken/markdown-it-php": "^8.4",
        "slim/slim": "^3.9",
        "slim/twig-view": "^2.3",
        "symfony/console": "^3.4",
        "twig/twig": "<2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.1"
    },
    "config": {
        "sort-packages": true
    },
    "optimize-autoloader": false,
    "autoload": {
        "psr-4": {
            "": [
                "app/src/"
            ],
            "App\\": [
                "custom/"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": "@cc",
        "post-update-cmd": "@cc",
        "cc": "rm -rf cache/*",
        "check": [
            "@cbf",
            "@cs"
        ],
        "cs": "phpcs  -sp --colors --standard=PSR2 app/src/* app/routes/* custom/Extension/*",
        "cbf": "phpcbf -sp --colors --standard=PSR2 app/src/* app/routes/* custom/Extension/*"
    }
}
