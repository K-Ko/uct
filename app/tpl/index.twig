{% extends 'layout.twig' %}
{# ----------------------------------------------------------------------- #}
{% block content %}
    {{ include('inc/code-select.twig') }}
    <div class="row">
        <div class="col">
            <table class="table table-striped table-hover summary">
                <thead class="thead-dark">
                    <tr>
                        <th class="w-1 text-center">
                            <i class="fa fa-sliders"></i>
                        </th>
                        <th class="w-75">{{ t.TranslationSets }}</th>
                        {% for row in lang_rows if row.active %}
                            <th class="count">
                                <span class="d-lg-none" data-toggle="tooltip" title="{{ row.desc }} ({{ row.code }})" data-placement="bottom">
                                    {{ row.code }}
                                </span>
                                <span class="d-none d-lg-block" data-toggle="tooltip" title="{{ row.code }}" data-placement="bottom">
                                    {{ row.desc }}
                                </span>
                            </th>
                        {% endfor %}
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in set_rows %}
                        <tr>
                            <td>
                                {{ macros.adminflags(row.admin) }}
                            </td>
                            <td>
                                <a href="{{ pathFor('list', {'set': row.code}) }}">{{ row.desc }}</a>
                            </td>
                            {% if row.cols %}
                                {% for col in row.cols %}
                                    {# Mark edit state for translations #}
                                    <td class="count alert-{{ col.count == row.count ? 'success' : 'warning' }}">
                                        <a href="{{ pathFor('list', {'set': row.code, 'lang': native, 'lang2': col.lang2}) }}">{{ col.count }}</a>
                                    </td>
                                {% endfor %}
                            {% endif %}
                            <td>
                                {% if can.admin %}
                                    <form class="form-inline" action="{{ pathFor('POST delete') }}" method="post">
                                        <input name="set" type="hidden" value="code_set"/>
                                            <input type="hidden" name="code" value="{{ row.code }}"/>
                                        <button type="submit" class="confirm-delete btn btn-sm btn-{{ row.active ? 'danger' : 'secondary' }}" data-toggle="tooltip" title="{{ t.Delete }}">
                                            <i class="fa fa-trash-o"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                {% if set_rows | length %}
                    <tfoot class="thead-dark">
                        <tr>
                            <th colspan="2">
                                {{ t.NeedsTranslation(todo_count, todo_rows) }}
                            </th>
                            {% for total in totals %}
                                <th class="count">{{ total }}</th>
                            {% endfor %}
                            <th></th>
                        </tr>
                    </tfoot>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
