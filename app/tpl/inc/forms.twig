{% macro input_hidden(name, value) %}
    <input type="hidden" name="{{ name }}" value="{{ value|e }}"/>
{% endmacro %}
{# ----------------------------------------------------------------- #}
{% macro input_row(type, name, value, label, hint) %}
    <div class="form-row">
        <label class="col-md-3 col-form-label">{{ label }}</label>
        <div class="col form-group">
            <div class="custom-control custom-{{ type }}">
                <input id="{{ type }}-{{ name }}" class="custom-control-input" type="{{ type }}" name="{{ name|e }}" value="1" {{ value ? 'checked' }}/>
                <label for="{{ type }}-{{ name }}" class="custom-control-label text-muted">
                    {{ hint }}
                </label>
            </div>
        </div>
    </div>
{% endmacro %}
{# ----------------------------------------------------------------- #}
{% macro input_checkbox(name, value, label, hint) %}
    <div class="form-row">
        <label class="col-md-3">{{ label }}</label>
        <div class="col form-group">
            <div class="custom-control custom-checkbox">
                <input id="cb-{{ name }}" class="custom-control-input" type="checkbox" name="{{ name|e }}" value="1" {{ value ? 'checked' }}/>
                <label for="cb-{{ name }}" class="custom-control-label text-muted">
                    {{ hint }}
                </label>
            </div>
        </div>
    </div>
{% endmacro %}
{# ----------------------------------------------------------------- #}
