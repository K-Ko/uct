{# ----------------------------------------------------------------- #}
{% macro adminflags(admin) %}
    {% spaceless %}
        {% if admin.param %}
            <span data-toggle="tooltip" title="{{ t.ParameterSet|e }}">P</span>
        {% endif %}
        {% if admin.slave %}
            <span data-toggle="tooltip" title="{{ t.SlaveSet|e }}">S</span>
        {% endif %}
        {% if admin.multi %}
            <span data-toggle="tooltip" title="{{ t.MultilineSet|e }}">M</span>
        {% endif %}
    {% endspaceless %}
{% endmacro %}
