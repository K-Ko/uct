<div class="row">
    <div class="col h4 text-center">{{ t.SelectSetLanguage }}</div>
</div>
<div class="row border-bottom mb-3">
    <div class="col-auto mx-auto my-2">
        <form action="{{ pathFor('index') }}" method="post" class="form-inline">
            <select class='form-control mr-md-2' name="set">{{ IndexCodeSetSelect }}</select>
            <select class='form-control mr-md-2' name="lang">{{ IndexLanguageSelect }}</select>
            <select class='form-control mr-sm-3' name="lang2">{{ IndexLanguage2Select }}</select>
            <button type='submit' class='btn btn-secondary mt-2 mt-sm-0' data-toggle="tooltip" title="{{ t.ViewSet|e }}">
                <i class="fa fa-check d-lg-none py-1"></i>
                <span class="d-none d-lg-inline">{{ t.ViewSet }}</span>
            </button>
        </form>
    </div>
</div>
