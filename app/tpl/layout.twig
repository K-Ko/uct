{% import 'inc/forms.twig' as macros %}
<html>
    <head>
        <meta content="width=device-width, initial-scale=1" name="viewport"/>
            <meta content="text/html; charset=utf-8" http-equiv="Content-Type"/>
        <title>
            {{ t.h("code_editor_txt::title") }}</title>
        <link
            href="/icons/apple-touch-icon.png"
            rel="apple-touch-icon"
            sizes="180x180"/>
        <link
            href="/icons/favicon-32x32.png"
            rel="icon"
            sizes="32x32"
            type="image/png"/>
        <link
            href="/icons/favicon-16x16.png"
            rel="icon"
            sizes="16x16"
            type="image/png"/>
        <link href="/icons/manifest.json" rel="manifest"/>
        <link color="#5bbad5" href="/icons/safari-pinned-tab.svg" rel="mask-icon"/>
        <link href="/icons/favicon.ico" rel="shortcut icon"/>
        <meta content="UCT" name="apple-mobile-web-app-title"/>
        <meta content="UCT" name="application-name"/>
        <meta content="/icons/browserconfig.xml" name="msapplication-config"/>
        <meta content="#ffffff" name="theme-color"/>
        <link
            crossorigin="anonymous"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
            integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
            rel="stylesheet"/>
        <link
            href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
            rel="stylesheet"/>
            <link href="/css/style.css" rel="stylesheet"/>
        {% if route %}
            <link href="/css/{{ route }}.css" rel="stylesheet"/>
        {% endif %}
        {{ extensions.content('head') }} {{ extensions.content('stylesheets') }}
    </head>
    <body class="{{ route }}">
        {{ include('inc/nav.twig') }}
        <div class="container">
            {{ include('inc/flash.twig') }} {{ extensions.content('page-before') }}
                {{ extensions.content('page-' ~ route ~ '-before') }}
            {% block content %}{% endblock %}
            {{ extensions.content('page-' ~ route ~ '-after') }}
            {{ extensions.content('page-after') }}
        </div>
        {{ include('inc/footer.twig') }}
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        {# <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script> #}
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
        <script src="/js/jquery.spinner.min.js"></script>
        <script src="/js/script.js"></script>
        {% if route %}
            <script src="/js/{{ route }}.js"></script>
        {% endif %}
        {{ extensions.content('scripts') }}
        <!-- Modal confirm dialog -->
        <div
            aria-hidden="true"
            class="modal fade"
            id="deleteModal"
            role="dialog"
            tabindex="-1">
            <div class="modal-dialog modal-sym" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">{{ t.Delete }}</h5>
                        <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ t.AreYouSure }}
                    </div>
                    <div class="modal-footer">
                        <button class="confirmed btn btn-primary" type="button">
                            <i class="fa fa-fw fa-check"></i>
                            {{ t.Yes }}
                        </button>
                        <button class="btn btn-secondary" data-dismiss="modal" type="button">
                            <i class="fa fa-fw fa-ban"></i>
                            {{ t.No }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
