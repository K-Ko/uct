{% extends 'layout.twig' %}
{# ----------------------------------------------------------------------- #}
{% block content %}
    <div class="row mt-md-3 mt-lg-5">
        <div class="col text-center h3">
            {{ t.LoginRequired }}
        </div>
    </div>
    <div class="row mt-md-3 mt-lg-5">
        <div class="col-auto mx-auto">
            <form method="post">
                <div class="form-group">
                    <label class="form-control-label" for="user">{{ t.Username }}</label>
                    <input class="form-control" id="user" name="user" required/>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="pw">{{ t.Password }}</label>
                    <input class="form-control" id="pw" name="pw" required type="password"/>
                </div>
                <div class="form-group mt-4">
                    <button class="btn btn-block btn-outline-primary" type="submit">{{ t.Login }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
