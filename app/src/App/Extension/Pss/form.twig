{% extends 'layout.twig' %}
{# ----------------------------------------------------------------------- #}
{% block content %}
    <div class="row text-center my-md-4">
        <div class="col h3">
            {{ t.code_ext__pss_ChangePassword }}
        </div>
    </div>
    <form method="post">
        <div class="form-row mt-md-3">
            <div class="form-group col-md-4">
                <label class="form-control-label" for="pw">{{ t.code_ext__pss_CurrentPassword }}</label>
                <input
                    class="form-control alert-danger"
                    id="pw"
                    name="pw"
                    required
                    type="password"/>
            </div>
            <div class="form-group col-md-4">
                <label class="form-control-label" for="pw1">{{ t.code_ext__pss_NewPassword }}</label>
                <input
                    class="form-control alert-danger"
                    id="pw1"
                    name="pw1"
                    required
                    type="password"/>
            </div>
            <div class="form-group col-md-4">
                <label class="form-control-label" for="pw2">{{ t.code_ext__pss_RepeatPassword }}</label>
                <input
                    class="form-control alert-danger"
                    id="pw2"
                    name="pw2"
                    required
                    type="password"/>
            </div>
        </div>
        <div class="form-row mt-4">
            <div class="col form-group text-center">
                <button class="btn btn-primary" disabled type="submit">{{ t.Save }}</button>
            </div>
        </div>
    </form>
{% endblock %}
